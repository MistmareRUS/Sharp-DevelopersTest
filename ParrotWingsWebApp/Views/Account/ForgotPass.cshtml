


@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <h4>Введите свой почтовый ящик</h4>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            @Html.Label("Зарегистированный электронный адрес", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" id="Mail" name="Mail" class="form-control" required="required" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Подтвердить" class="btn btn-default" />
            </div>
        </div>
    </div>
}

